@model VehicleServiceBook.ViewModels.InternalServiceIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Serwis</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-controller="Faults" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Dodaj nową usterkę</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Opis usterki</th>
            <th>Numer pojazdu</th>
            <th>Dodano do serwisu</th>
            <th>Oględziny</th>
            <th>Materiały</th>
            <th>Wykonanie</th>
            <th>Akcja</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.InternalServices)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fault.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Fault.Vehicle.Number)</td>
                <td>@Html.DisplayFor(modelItem => item.Fault.ProcessDateTimeString)</td>
                <td>
                    @{
                        int state = item.InspectionStatus;
                        int id = item.Id;
                        string onclickFunc = @"onclick=""SubPagePopup('/Edit?id=" + id + @"&show=store',800)""";
                    }
                </td>
                <td>
                    <div class="text-center">
                        <a onclick="SubPagePopup('/Details?id=@item.Id')"
                           class="btn btn-info text-white" style="cursor:pointer">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a onclick="SubPagePopup('/Process?id=@item.Id')" class="btn btn-success text-white" style="cursor:pointer">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a onclick="Delete('/Delete?id=@item.Id')" class="btn btn-danger text-white" style="cursor:pointer">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#tblData').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Polish.json"
            },
        });
    });

    var currentpath;
    var fullurl;
    var subpathCopy;

    function Delete(subpath) {
        subpathCopy = subpath
        currentpath = window.location.pathname
        fullurl = currentpath + subpathCopy
        Swal.fire({
            title: 'Czy jesteś pewien?',
            text: "Nie będzie możliwości przywrócenia danych!",
            icon: 'warning',
            showCancelButton: true,
            timer: 20000,
            confirmButtonText: 'Tak, usuń',
            cancelButtonText: 'Nie, wróć',
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "DELETE",
                    url: fullurl,
                    success:
                        function (){
                            location.reload();
                        }
                });
            }
            else if (
                result.dismiss === Swal.DismissReason.cancel
            );
        })
    }
</script>



