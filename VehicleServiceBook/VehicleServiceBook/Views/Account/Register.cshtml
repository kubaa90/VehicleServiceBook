@model VehicleServiceBook.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Dodawanie nowego użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodawanie nowego użytkownika</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Podaj imię użytkownika" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" placeholder="Podaj nazwisko użytkownika" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Podaj nazwę użytkownika (pierwsza litera imienia + 4 litery nazwiska)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Podaj email użytkownika" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Podaj telefon użytkownika" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">Rola</label>
                @Html.DropDownListFor(x => x.Role, new List<SelectListItem>
                { new SelectListItem { Text = "Admin", Value = "Admin", Selected=true},
                    new SelectListItem { Text = "Obsługa", Value = "Obsługa"},
                    new SelectListItem { Text = "Kierowca", Value = "Kierowca"},
                    new SelectListItem { Text = "Zablokowany", Value = "Zablokowany"},
                }, "Wybierz uprawnienia", new { @class = "form-control" })
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Podaj hasło użytkownika" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword" class="control-label"></label>
                <input asp-for="RepeatPassword" class="form-control" placeholder="Powtórz hasło użytkownika" />
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj użytkownika" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


