
@model VehicleServiceBook.ViewModels.FaultDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Szczegóły usterki";
}
@Html.HiddenFor(m => m.Id)
<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Szczegóły usterki</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <a asp-controller="fault" asp-action="index"
                       class="btn btn-primary">Powrót do listy</a>
                    <a asp-controller="fault" asp-action="edit" asp-route-id="@Model.Id"
                       class="btn btn-primary m-1">Edycja zgłoszenia</a>
                </div>
            </div>
        </div>
    </div>
</div>

