
@model VehicleServiceBook.ViewModels.FaultDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Szczegóły usterki";
}
@Html.HiddenFor(m => m.Id)



<hr />
<div class="row p-3">
    <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <dl class="row" style="text-align: left;">
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Vehicle.Number)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Vehicle.Number)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CreateUserName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CreateUserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AddDateTimeString)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AddDateTimeString)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ProcessedUserName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ProcessedUserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ProcessDateTimeString)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ProcessDateTimeString)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="text-center">
            <a asp-controller="fault" asp-action="index"
               class="btn btn-primary">Powrót do listy</a>
            <a asp-controller="fault" asp-action="Process" asp-route-id="@Model.Id"
               class="btn btn-primary m-1">Przetwarzaj zgłoszenie</a>
        </div>
    </div>
</div>


