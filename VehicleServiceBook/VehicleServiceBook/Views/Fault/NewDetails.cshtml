@model VehicleServiceBook.ViewModels.FaultDetailsViewModel
@{
    ViewData["Title"] = "NewDetails";
    Layout = null;
    var title = "Szczegóły usterki";
}

@Html.HiddenFor(m => m.Id)

<hr />
<div class="row p-3">
    <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <dl class="row" style="text-align: left;">
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.Fault.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Fault.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Fault.Vehicle.Number)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Fault.Vehicle.Number)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Fault.CreateUserName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Fault.CreateUserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AddDateTimeString)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AddDateTimeString)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Fault.ProcessedUserName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Fault.ProcessedUserName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ProcessDateTimeString)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ProcessDateTimeString)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Fault.Status)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Fault.Status)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.OperatorRemarks)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.OperatorRemarks)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="text-center">
            <a asp-controller="fault" asp-action="index"
               class="btn btn-primary">Powrót do listy</a>
        </div>
    </div>
</div>

